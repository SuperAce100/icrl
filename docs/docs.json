{
  "$schema": "https://mintlify.com/docs.json",
  "name": "ICRL",
  "logo": {
    "dark": "/logo/logo_dark.png",
    "light": "/logo/logo_light.png"
  },
  "theme": "linden",
  "favicon": "/icon.png",
  "colors": {
    "primary": "#F88D39",
    "light": "#F88D39",
    "dark": "#F88D39"
  },
  "contextual": {
    "options": ["copy", "view"]
  },
  "fonts": {
    "heading": {
      "family": "Archivo",
      "weight": 600
    },
    "body": {
      "family": "TikTok Sans",
      "weight": 400
    }
  },
  "topbarLinks": [
    {
      "name": "GitHub",
      "url": "https://github.com/SuperAce100/icrl"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "/quickstart"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["introduction", "installation", "quickstart"]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "core-concepts/icrl-algorithm",
              "core-concepts/react-loop",
              "core-concepts/trajectory-database",
              "core-concepts/curation"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/cli",
              "guides/typescript-package",
              "guides/web-example",
              "guides/convex-provider",
              "guides/prompt-templates",
              "guides/custom-environments",
              "guides/custom-llm-providers",
              "guides/batch-training"
            ]
          },
          {
            "group": "Examples",
            "pages": [
              "examples/file-system-agent",
              "examples/harbor-coding-agent",
              "examples/testing-with-mock-llm"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": ["api-reference/overview"]
          },
          {
            "group": "Python API",
            "pages": [
              "api-reference/agent",
              "api-reference/trajectory",
              "api-reference/step",
              "api-reference/step-context",
              "api-reference/message",
              "api-reference/environment",
              "api-reference/llm-provider",
              "api-reference/litellm-provider",
              "api-reference/anthropic-vertex-provider",
              "api-reference/trajectory-database",
              "api-reference/trajectory-retriever",
              "api-reference/curation-manager",
              "api-reference/embedder"
            ]
          },
          {
            "group": "TypeScript API",
            "pages": ["api-reference/typescript-package"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "icon": "github",
          "href": "https://github.com/SuperAce100/icrl"
        },
        {
          "anchor": "PyPI",
          "icon": "python",
          "href": "https://pypi.org/project/icrl-py/"
        }
        ]
    }
  },
  "footerSocials": {
    "github": "https://github.com/SuperAce100/icrl"
  }
}
